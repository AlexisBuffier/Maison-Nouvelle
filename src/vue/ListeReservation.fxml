<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ListeReservationController">
   <bottom>
      <Pane prefHeight="626.0" prefWidth="1010.0" styleClass="body" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="TitrePrincipale" layoutX="314.0" layoutY="22.0" styleClass="TitreAccueil" text="Liste des réservations" />
            <TableView fx:id="tableListeReservation" layoutY="88.0" prefHeight="461.0" prefWidth="1010.0" styleClass="tableListeReservation">
              <columns>
                <TableColumn fx:id="colonneNumero" text="Numero" />
                <TableColumn fx:id="colonneNom" prefWidth="212.0" text="Nom" />
                  <TableColumn fx:id="colonneNbPersonnes" prefWidth="217.0" text="Nombre de personne" />
                  <TableColumn fx:id="colonneDate" prefWidth="240.0" text="Date" />
                  <TableColumn fx:id="colonneTable" prefWidth="258.0" text="Table" />
              </columns>
            </TableView>
            <Button fx:id="btnAccueil" layoutX="21.0" layoutY="21.0" mnemonicParsing="false" onMouseClicked="#onClickAccueil" prefHeight="44.0" prefWidth="148.0" text="ACCUEIL" />
            <Button fx:id="btnSupprimerReservation" layoutX="776.0" layoutY="562.0" mnemonicParsing="false" onMouseClicked="#onClickDeleteReserv" prefHeight="57.0" prefWidth="193.0" text="SUPPRIMER" />
            <Label layoutX="489.0" layoutY="578.0" text="Réservation sélectionnée :" />
            <TextField fx:id="inputReservationSelectionnee" alignment="CENTER" editable="false" layoutX="684.0" layoutY="575.0" prefHeight="31.0" prefWidth="67.0" />
            <TextField fx:id="inputRecherche" layoutX="782.0" layoutY="46.0" styleClass="zoneDeSaisie" />
            <Label layoutX="835.0" layoutY="21.0" text="Recherche :" />
            <DatePicker fx:id="inputDateSelectionnee" layoutX="169.0" layoutY="571.0" onAction="#getAllReservationByDate" prefHeight="40.0" prefWidth="185.0" styleClass="zoneDeSaisie" />
            <Label layoutX="30.0" layoutY="578.0" text="Date sélectionnée :" />
         </children>
      </Pane>
   </bottom>
</BorderPane>
